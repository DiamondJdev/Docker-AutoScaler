# Environment Configuration Template
# Copy this file to .env and update the values

# Application Settings
NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=scalable_backend
DB_USER=postgres
DB_PASSWORD=

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=superlongtrust

# API Configuration
API_RATE_LIMIT=100
LOGIN_RATE_LIMIT=5

# Logging
LOG_LEVEL=info

# Docker-specific (used in docker-compose.yml)
POSTGRES_DB=scalable_backend
POSTGRES_USER=postgres
POSTGRES_PASSWORD=

# Auto-scaling Configuration
SCALE_UP_THRESHOLD=80
SCALE_DOWN_THRESHOLD=30
MIN_REPLICAS=2
MAX_REPLICAS=10
CHECK_INTERVAL=30
COOLDOWN_PERIOD=120

# Advanced Scaling Thresholds
CPU_SCALE_UP_THRESHOLD=70
CPU_SCALE_DOWN_THRESHOLD=20
MEMORY_SCALE_UP_THRESHOLD=80
MEMORY_SCALE_DOWN_THRESHOLD=40

# Scaling Algorithm (linear, exponential, predictive)
SCALING_ALGORITHM=linear